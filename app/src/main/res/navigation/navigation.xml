<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/accountFragment">

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.mywork.Account"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_AddCardFragment"
            app:destination="@id/AddCardFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.mywork.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/messgeFragment"
        android:name="com.example.mywork.MessgeFragment"
        android:label="fragment_messge"
        tools:layout="@layout/fragment_messge" />

    <fragment
        android:id="@+id/customizationFragment"
        android:name="com.example.mywork.CustomizationFragment"
        android:label="fragment_customization"
        tools:layout="@layout/fragment_customization" />

    <fragment
        android:id="@+id/AddCardFragment"
        android:name="com.example.mywork.AddCardFragment"/>
</navigation>